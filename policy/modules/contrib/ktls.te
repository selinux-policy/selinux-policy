type ktlshd_t;
type ktlshd_exec_t;
init_daemon_domain(ktlshd_t, ktlshd_exec_t)

permissive ktlshd_t;

allow ktlshd_t self:netlink_generic_socket create_socket_perms;
allow ktlshd_t self:unix_dgram_socket create_socket_perms;

optional_policy(`
	logging_send_syslog_msg(ktlshd_t)
')
